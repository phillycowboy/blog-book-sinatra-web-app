<h1>Edit Your Blog Post For <%= @blog.title %> </h1>
<p><%= @error %></p>
<form action="/blogs/<%= @blog.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label>Blog Title</label>
    <input type="text" name="blog[title]" value="<%= @blog.title %>">
    
    <label>Author</label>
    <input type="text" name="blog[author]" value="<%= @blog.author %>">
    
    <label>Content</label>
    <textarea type="textarea" name="blog[content]"><%= @blog.content %></textarea>

    <button type="Submit">Edit Blog</button>

</form>